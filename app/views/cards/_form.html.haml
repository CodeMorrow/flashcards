= simple_form_for ([@deck, @deck.cards.create]), url: {action: "create"}, :method => :POST do |f| 
  %h3= "New Card in the #{@deck.title} deck"
  .forms-field 
    .form-group
      = f.input :title, label: "Front of Card", input_html: { class: 'form-control' }
      = f.input :description, label: "Back of Card", input_html: { class: 'form-control' }
    = f.submit :submit, class: "btn btn-info"

