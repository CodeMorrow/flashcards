= simple_form_for @deck, html: { multipart: true } do |f|
  - if @deck.errors.any?
    #errors	  
      %h2
      = pluralize(@deck.errors.count, "error")
      prevented this picture from saving
      %ul
        - @deck.errors.full_messages.each do |msg|
          %li= msg
  .forms-field 
    .form-group
      = f.input :title, label: "Title of Deck", input_html: { class: 'form-control' }
    .form-group
      = f.input :description, label: "What is this Deck All About?", input_html: { class: 'form-control' }
    = f.submit "Submit", class: "btn btn-success"
    = link_to "Back", root_path, class: "btn btn-warning"